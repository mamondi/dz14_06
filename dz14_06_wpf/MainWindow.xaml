<Window x:Class="dz14_06_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="420">
    <Grid>
        <Button Name="CalcButtonStart" Content="Calculator" HorizontalAlignment="Center" VerticalAlignment="Center" Width="104" Click="CalcButtonStart_Click"/>
        <Button Name="CalendarButtonStart" Content="Calendar" HorizontalAlignment="Left" VerticalAlignment="Center" Width="105" Click="CalendarButtonStart_Click" Margin="10,0,0,0"/>
        <Button Name="NotepadButtonStart" Content="Notepad" HorizontalAlignment="Left" VerticalAlignment="Center" Width="105" Click="NotepadButtonStart_Click" Margin="305,0,0,0"/>
        <Button Name="ExitButton" Content="Exit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="104" Click="ExitButton_Click" Margin="305,10,0,0"/>
        <TextBlock Name="ResultTextBlock" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" FontSize="14"/>
    </Grid>
</Window>
